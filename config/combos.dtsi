ZMK_COMBO(lbrc,  &kp LBRC,     RM3 RB3,     SYM            , COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(rbrc,  &kp RBRC,     RM4 RB4,     SYM            , COMBO_TERM_FAST, COMBO_IDLE_FAST)