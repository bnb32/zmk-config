#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

/* Horizontal combos - left hand */
ZMK_COMBO(esc,   &kp ESC,      LT5 LT4,         DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(cncl,  &kp K_CANCEL, LM5 LM4,         DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Horizontal combos - right hand */
ZMK_COMBO(bspc,  &kp BSPC,     RT1 RT2,     SYM DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(del,   &kp DEL,      RT2 RT3,     SYM DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(ret,   &kp RET,      RB1 RB2,     SYM DEF NAV NUM, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Vertical combos - left hand */
ZMK_COMBO(grave, &kp GRAVE,    LT5 LM5,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(one,   &kp N1,       LT4 LM4,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(two,   &kp N2,       LT3 LM3,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(three, &kp N3,       LT2 LM2,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(four,  &kp N4,       LT1 LM1,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(five,  &kp N5,       LT0 LM0,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(pscrn, &kp PSCRN,    LM5 LB5,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(menu,  &kp K_CMENU,  LM4 LB4,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(cut,   &kp LC(X),    LM3 LB3,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(copy,  &kp LC(INS),  LM2 LB2,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(paste, &kp LS(INS),  LM1 LB1,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(tilde, &kp TILDE,    LT5 LM5,     SYM            , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(excl,  &kp EXCL,     LT4 LM4,     SYM            , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(at,    &kp AT,       LT3 LM3,     SYM            , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(hash,  &kp HASH,     LT2 LM2,     SYM            , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(dllr,  &kp DLLR,     LT1 LM1,     SYM            , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(prcnt, &kp PRCNT,    LT0 LM0,     SYM            , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

/* Vertical combos - right hand */
ZMK_COMBO(six,   &kp N6,       RT0 RM0,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(seven, &kp N7,       RT1 RM1,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(eight, &kp N8,       RT2 RM2,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(nine,  &kp N9,       RT3 RM3,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(zero,  &kp N0,       RT4 RM4,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(equal, &kp EQUAL,    RT5 RM5,         DEF        , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

ZMK_COMBO(caret, &kp CARET,    RT0 RM0,     SYM            , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(amps,  &kp AMPS,     RT1 RM1,     SYM            , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(star,  &kp STAR,     RT2 RM2,     SYM            , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(lpar,  &kp LPAR,     RT3 RM3,     SYM            , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(rpar,  &kp RPAR,     RT4 RM4,     SYM            , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(plus,  &kp PLUS,     RT5 RM5,     SYM            , COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

